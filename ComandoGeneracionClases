    eliminado boolean NOT NULL DEFAULT false,    
    CONSTRAINT co_familiar_pkey PRIMARY KEY (id),
    CONSTRAINT co_familiar_genero_fkey FOREIGN KEY (genero)
        REFERENCES usuario (id),        
